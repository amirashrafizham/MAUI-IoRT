<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MAUI-IoRT</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="iconify" data-icon="ant-design:dashboard-outlined"
                      style="font-size: 25px; margin-right:10px" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="robot">
                <span class="iconify" data-icon="bi:robot" style="font-size: 25px; margin-right:10px"
                      aria-hidden=" true"></span>
                Robot Control Panel
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="drone">
                <span class="iconify" data-icon="eos-icons:drone" style="font-size: 25px; margin-right:10px"
                      aria-hidden="true"></span> Drone Control Panel
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="gyroscope">
                <span class="iconify" data-icon="ic:twotone-sensors" style="font-size: 25px; margin-right:10px"
                      aria-hidden="true"></span> Accelerometer
            </NavLink>
        </div>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
